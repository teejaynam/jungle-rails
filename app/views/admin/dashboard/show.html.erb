  <h1>Dashboard</h1>

  <div class="row">
    <div class="col-lg">
      <div class="card">
        <div class="card-body">
          <h4 class="card-title">Products Count</h4>
          <p class="card-text"><%= link_to @product_count, admin_products_path %></p>
        </div>
      </div>
    </div>

    <div class="col-lg">
      <div class="card">
        <div class="card-body">
          <h4 class="card-title">Categories Count</h4>
          <p class="card-text"><%= @category_count %></p>
        </div>
      </div>
    </div>
  </div>

</div>
